contract ERC20FlashMint is ERC20, ERC20Burnable, Pausable, ReentrancyGuard, Ownable, IERC3156FlashLender {
    using Address for address;
    using SafeMath for uint256;

    // Constants for Flash Loan Fee
    uint256 public FLASH_LOAN_FEE_BPS = 9; // 0.09% fee
    uint256 public constant FLASH_LOAN_FEE_DIVISOR = 10000;

    event FlashLoan(address indexed borrower, address indexed token, uint256 amount, uint256 fee);

    constructor(string memory name, string memory symbol, uint8 decimal ,uint256 fee) ERC20(name, symbol, decimal) Ownable(msg.sender) {
        FLASH_LOAN_FEE_BPS = fee;
    }

    // Flash loan functionality
    function flashLoan(
        IERC3156FlashBorrower receiver,
        address token,
        uint256 amount,
        bytes calldata data
    ) external override nonReentrant returns (bool) {
        require(token == address(this), "ERC20FlashMint: unsupported token");

        uint256 fee = _flashFee(token, amount);
        uint256 totalRepayment = amount.add(fee);

        // Mint the tokens temporarily for flash loan
        _mint(address(receiver), amount);

        // Call the borrower's flash loan receiver callback
        require(
            receiver.onFlashLoan(msg.sender, token, amount, fee, data) ==
                keccak256("ERC3156FlashBorrower.onFlashLoan"),
            "ERC20FlashMint: invalid return value from flash loan"
        );

        // Ensure the borrower has enough to repay
        require(balanceOf(address(receiver)) >= totalRepayment, "ERC20FlashMint: insufficient repayment");

        // Burn the tokens that were loaned out
        _burn(address(receiver), totalRepayment);

        emit FlashLoan(address(receiver), token, amount, fee);
        return true;
    }

    // Get the flash loan fee for the given amount
    function _flashFee(address token, uint256 amount) internal view returns (uint256) {
        require(token == address(this), "ERC20FlashMint: unsupported token");
        return amount.mul(FLASH_LOAN_FEE_BPS).div(FLASH_LOAN_FEE_DIVISOR);
    }

    // Flash loan fee function as per EIP-3156
    function flashFee(address token, uint256 amount) external view override returns (uint256) {
        return _flashFee(token, amount);
    }

    // Max amount of tokens available for flash loans
    function maxFlashLoan(address token) external view override returns (uint256) {
        if (token == address(this)) {
            return type(uint256).max - totalSupply();
        } else {
            return 0;
        }
    }

    // Pause and unpause the contract
    function pause() external onlyOwner {
        _pause();
    }

    function unpause() external onlyOwner {
        _unpause();
    }

    // Minting function, restricted to owner
    function mint(address to, uint256 amount) public onlyOwner {
        _mint(to, amount);
    }

}
